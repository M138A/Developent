    <Label fx:id="usernameLabel" layoutX="277.0" layoutY="14.0" text="Characters" />
      <Label layoutX="200.0" layoutY="91.0" text="Name:" />
      <TextField fx:id="characterName" layoutX="251.0" layoutY="87.0" />
      <RadioButton fx:id="assassinClass" layoutX="249.0" layoutY="162.0" mnemonicParsing="false" text="Assassin">
         <toggleGroup>
            <ToggleGroup fx:id="classGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="mageClass" layoutX="249.0" layoutY="179.0" mnemonicParsing="false" text="Mage" toggleGroup="$classGroup" />
